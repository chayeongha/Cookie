<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
    <mapper namespace="com.cookie.basic.member.MemberFilesMapper">
    
    	<!-- 회원가입시 이미지삽입 -->
    	<insert id="memberFilesInsert" parameterType="memberFilesVO">
    		insert into memberFiles values(null,#{id},#{fname},#{oname})
    	</insert>
    
    	<!--셀렉트  -->
    	<select id="memberFilesSelect" parameterType="memberFilesVO">
 			select * from memberFiles where fnum= #{fnum}
 		</select>
 		
 		<!--이미지 수정 -->
    	<update id="memberFilesUpdate" parameterType="memberFilesVO">
			   
			   	update memberFiles set fname=#{fname}, oname=#{oname}
			   	where id=#{id} 
    	</update>
    </mapper>