<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.cookie.basic.board.qna.QnaFilesMapper">
	<select id="qnaFilesSelect" parameterType="Integer" resultType="QnaFilesVO">
		select * from qnaFiles where fnum = #{fnum}
	</select>
	
	<insert id="qnaFilesInsert" parameterType="List">
		insert into qnaFiles
		values <foreach collection="list" item="item" separator=",">
			(0, #{item.num}, #{item.fname}, #{item.oname})
		</foreach>
	</insert>
	
	<delete id="qnaFilesDelete" parameterType="QnaFilesVO">
		delete from qnaFiles where fnum=#{fnum}
	</delete> 
	
	<select id="qnaFilesList" parameterType="Integer" resultType="QnaFilesVO">
		select * from qnaFiles where num=#{num}
	</select>
</mapper>